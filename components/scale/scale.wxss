.scale_row {
    display: flex;
    border-radius: 10rpx;
    width: 620rpx;
    height: 44rpx;
    line-height: 44rpx;
    border: 2rpx solid #BBBBBB;
}

.scale_square {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
}

.scale_square:nth-child(-n+4) {
    border-right: 1px solid #BBBBBB;
}

.bgDark {
    background-color: #C0C4CC;
}