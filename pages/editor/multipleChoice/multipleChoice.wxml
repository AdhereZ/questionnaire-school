<view class="question">
    <textarea placeholder="请在此处输入问题（200字内）" ></textarea>
</view>


<view style="margin-left: 18rpx;">选项</view>
<view class="option"> 
    <view class="inputText" wx:for="{{option}}" wx:key="{{item.id}}" >
        <view bindtap="deleteoption" data-index="{{index}}"> <image class="delete" mode="widthFix" src="../../../img/TitleEditor/editoricon3.png"></image> </view>
        <input type="text" placeholder="输入选项（50字内）"/>
        
            <image class="choose" mode="widthFix" src="../../../img/TitleEditor/editoricon2.png"></image>
       
    </view>

  <view class="addoption">
      <view bindtap="addOption"><image src="../../../img/TitleEditor/editoricon4.png" mode="widthFix"></image>
    </view>
  </view>
  
</view>


<view style="margin-left: 18rpx;margin-bottom: 14rpx;">设置</view>
<view class="setup">
    <view class="answer setupLine">
        <view style="float:left;">必答</view>
        <view class="switch" style="margin-right:40rpx">
            <switchItme bindmyevent="tagSwitch" dataItem="{{switchData}}">
            </switchItme>
          </view>
    </view>
    <view class="leastSelect setupLine">
        <view style="margin-right: 440rpx;">最少选择</view>

       <view style="border: 1px solid #DCDFE6; border-radius: 8rpx; display: flex; align-items: center;">
        <input type="text" value="{{leastNum}}" bindblur="changeLeastNum"/>
        <view class="account">
            <view class="add" bindtap="leastAdd" style="height: 27rpx; width: 60rpx; padding: 0 0 0 16rpx;" >
                <image mode="widthFix" src="../../../img/icons/arrow_up2.png" wx:if="{{leastAddFlag}}"></image>
                <image mode="widthFix" src="../../../img/icons/arrow_up1.png" wx:else></image>
            </view>
            <view class="sub" bindtap="leastSub" style="height: 27rpx; width: 60rpx; padding: 0 0 0 16rpx;">
                <image mode="widthFix" src="../../../img/icons/arrow_down2.png" wx:if="{{leastSubFlag}}"></image>
                <image mode="widthFix" src="../../../img/icons/arrow_down1.png" wx:else></image>
            </view>
        </view>
       </view>
    </view>

    <view class="MostSelect setupLine">
        <view style="margin-right: 440rpx;">最多选择</view>

       <view style="border: 1px solid #DCDFE6; border-radius: 8rpx; display: flex; align-items: center;">
        <input type="text" value="{{mostNum}}" bindblur="changeMostNum"/>
        <view class="account">
            <view class="add" bindtap="mostAdd" style="height: 27rpx; width: 60rpx; padding: 0 0 0 16rpx;" >
                <image mode="widthFix" src="../../../img/icons/arrow_up2.png" wx:if="{{mostAddFlag}}"></image>
                <image mode="widthFix" src="../../../img/icons/arrow_up1.png" wx:else></image>
            </view>
            <view class="sub" bindtap="mostSub" style="height: 27rpx; width: 60rpx; padding: 0 0 0 16rpx;">
                <image mode="widthFix" src="../../../img/icons/arrow_down2.png" wx:if="{{mostSubFlag}}"></image>
                <image mode="widthFix" src="../../../img/icons/arrow_down1.png" wx:else></image>
            </view>
        </view>
       </view>
    </view>
</view>

<button class="submit">确认</button>
