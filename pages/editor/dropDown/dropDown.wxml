<view class="question">
    <textarea placeholder="请在此处输入问题（200字内）" ></textarea>
</view>


<view style="margin-left: 18rpx;">标题栏</view>
<view class="option" > 
    <view class="inputText" wx:for="{{option}}" wx:key="{{item.option_id}}" >
        <view bindtap="deleteoption" data-index="{{index}}"> <image class="delete" mode="widthFix" src="../../../img/TitleEditor/editoricon3.png"></image> </view>
        <input type="text" placeholder="输入选项（50字内）"/>    
    </view>

  <view class="addoption">
      <view bindtap="addOption"><image src="../../../img/TitleEditor/editoricon4.png" mode="widthFix"></image>
    </view>
  </view>
  
</view>

<view>
    <view class="dropTables" wx:for="{{option}}" wx:for-item="item1" wx:for-index="index1" wx:key="{{item1.option_id}}">
        <view style="margin-left: 18rpx;">下拉菜单{{index1+1}}</view>
    <view class="dropTablesOption"> 
        <view class="inputText" wx:for="{{option[index1].dropOption}}" wx:for-item="item2" wx:for-index="index2" wx:key="{{item2.id}}" >
            <view bindtap="deleteDropOption" data-id1="{{index1}}" data-id2="{{index2}}"> <image class="delete" mode="widthFix" src="../../../img/TitleEditor/editoricon3.png"></image> </view>
            <input type="text" placeholder="输入选项（50字内）"/>    
        </view>
    
      <view class="addoption">
          <view bindtap="addDropOption" data-id1="{{index1}}"><image src="../../../img/TitleEditor/editoricon4.png" mode="widthFix"></image>
        </view>
      </view>
      
    </view>
    </view>
</view>



<view style="margin-left: 18rpx;margin-bottom: 14rpx;">设置</view>
<view class="setup">
    <view class="answer setupLine">
        <view style="float:left;">必答</view>
        <view class="switch" style="margin-right:40rpx">
            <switchItme bindmyevent="tagSwitch" dataItem="{{switchData}}">
            </switchItme>
          </view>
    </view>
    
</view>

<button class="submit">确认</button>
